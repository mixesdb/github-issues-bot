    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "pm2": "^5.3.0"
  },
  "scripts": {
    "start": "ts-node index.ts",
    "build": "tsc",
    "start:prod": "node dist/index.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop github-issues-bot",
